<Window x:Class="WPFGameShop.GameListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGameShop" xmlns:wpfcontrollibrary="clr-namespace:WpfControlLibrary;assembly=UserControls"
		mc:Ignorable="d"
        Title="GameListWindow" Height="450" Width="800">
	<Window.DataContext>
		<Binding RelativeSource="{RelativeSource Self}"/>
	</Window.DataContext>
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>

			<ColumnDefinition x:Name="ColumnSplitter" Width="Auto">
				<ColumnDefinition.Style>
					<Style TargetType="{x:Type ColumnDefinition}">
						<Style.Triggers>
							<DataTrigger Binding="{Binding SelectedGameViewModel.SelectedGame}" Value="{x:Null}">
								<DataTrigger.Setters>
									<Setter Property="ColumnDefinition.Width" Value="0"/>
								</DataTrigger.Setters>
							</DataTrigger>
						</Style.Triggers>

					</Style>
				</ColumnDefinition.Style>
			</ColumnDefinition>
			<ColumnDefinition x:Name="ColumnSelectedGame">
				<ColumnDefinition.Style>
					<Style TargetType="{x:Type ColumnDefinition}">
						<Style.Triggers>
							<DataTrigger Binding="{Binding SelectedGameViewModel.SelectedGame}" Value="{x:Null}">
								<DataTrigger.Setters>
									<Setter Property="ColumnDefinition.Width" Value="0"/>
								</DataTrigger.Setters>
							</DataTrigger>
						</Style.Triggers>

					</Style>
				</ColumnDefinition.Style>

			</ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="9*"/>
 
		 
			
		</Grid.RowDefinitions>
		<StackPanel Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" >
		 
				<ToolBar Height="Auto">
					<wpfcontrollibrary:SearchControl  />

				 
				</ToolBar>
					
			 
		</StackPanel>



		<ListView x:Name="List" ItemsSource="{Binding Path =GameListViewModel.GameModelListView}" Grid.Column="0"  Grid.Row="1"
				  SelectedItem="{Binding Path= SelectedGameViewModel.SelectedGame}" Background="Transparent"
				 ItemTemplate="{StaticResource GameListBoxItem}"/>

		<GridSplitter Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Width="5" VerticalAlignment="Stretch"/>





		<local:GameModelControl Grid.Column="2"  Grid.Row="1" Source="{Binding SelectedGameViewModel}"/>


